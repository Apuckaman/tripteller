{
  "kind": "collectionType",
  "collectionName": "pois",
  "info": {
    "singularName": "poi",
    "pluralName": "pois",
    "displayName": "POI"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "lat": {
      "type": "decimal",
      "required": true,
      "min": -90,
      "max": 90
    },
    "lng": {
      "type": "decimal",
      "required": true,
      "min": -180,
      "max": 180
    },
    "radius": {
      "type": "integer",
      "default": 150
    },
    "audio": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files",
        "audios"
      ]
    },
    "ttstext": {
      "type": "text"
    },
    "description": {
      "type": "blocks"
    }
  }
}
